<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/FavorityTrackRelativyLayout"
    >

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="28dp"
        android:id="@+id/FavorityTracks_index" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/FavorityTracks_imageView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/FavorityTracks_index"
        android:layout_toEndOf="@+id/FavorityTracks_index"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:id="@+id/FavorityTracks_name"
        android:layout_alignBaseline="@+id/FavorityTracks_index"
        android:layout_alignBottom="@+id/FavorityTracks_index"
        android:layout_toRightOf="@+id/FavorityTracks_imageView"
        android:layout_toEndOf="@+id/FavorityTracks_imageView" />
</RelativeLayout>