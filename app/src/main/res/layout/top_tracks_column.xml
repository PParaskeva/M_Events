<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topTrack_relativyLayout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:id="@+id/rank_textView_top_tracks" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        android:layout_alignTop="@+id/rank_textView_top_tracks"
        android:layout_toRightOf="@+id/rank_textView_top_tracks"
        android:layout_toEndOf="@+id/rank_textView_top_tracks"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:id="@+id/imageView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:id="@+id/artists_name_top_tracks" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/track_name_top_tracks"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/artists_name_top_tracks"
        android:layout_alignStart="@+id/artists_name_top_tracks" />
</RelativeLayout>